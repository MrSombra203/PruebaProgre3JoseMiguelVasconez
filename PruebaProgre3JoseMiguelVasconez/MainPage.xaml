<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaProgre3JoseMiguelVasconez.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="meme.jpg"
                HeightRequest="185"
                Aspect="AspectFit"/>
            <Label 
                x:Name="jmvasconez_label1"
                Text="Pais"
                FontSize="24"
                TextColor="#2c3e50"
                HorizontalOptions="Start"/>
            <Editor x:Name="jmvasconez_editor1"
                    Placeholder="Ingrese El Nombre Del Pais Que Busca."
                    BackgroundColor="#ecf0f1"
                    HeightRequest="40"/>
            <Label
                x:Name="jmvasconez_label2"
                Text="Nombre"
                FontSize="24"
                TextColor="#2c3e50"
                HorizontalOptions="Start"/>
            <Editor x:Name="jmvasconez_editor2"
                    Placeholder="Ingrese El Nombre De La Persona Del Pais Que Ingreso Anterior Mente."
                    BackgroundColor="#ecf0f1"
                    HeightRequest="40"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
